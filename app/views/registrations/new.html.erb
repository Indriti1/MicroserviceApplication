<div class="card mw-100 w-50 p-4 m-5">
  <div class="card-body">
    <h2 class="card-title">Sign Up</h2>
    <%= form_tag signup_path, :method => :post, :class => 'form card-text' do %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <% @user.errors.full_messages.each do |message| %>
          <div><%= message %></div>
          <% end %>
        </div>
      <% end %>
      <div class="mb-3">
        <%= label :user, :name, 'Name', :class => 'form-label' %>
        <%= text_field :user, :name, :class => 'form-control', placeholder: "John" %>
      </div>
      <div class="mb-3">
        <%= label :user, :surname, 'Surname', :class => 'form-label' %>
        <%= text_field :user, :surname, :class => 'form-control', placeholder: "Doe" %>
      </div>
      <div class="mb-3">
        <%= label :user, :email, 'Email', :class => 'form-label' %>
        <%= text_field :user, :email, :class => 'form-control', placeholder: "johndoe@email.com" %>
      </div>
      <div class="mb-3">
        <%= label :user, :password, 'Password', :class => 'form-label' %>
        <%= password_field :user, :password, :class => 'form-control', placeholder: "password" %>
      </div>
      <%= submit_tag 'Register', :class => 'btn btn-primary' %>
    <% end %>
  </div>
</div>