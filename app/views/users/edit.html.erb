<div class="card mw-100 w-50 p-4 m-5">
  <div class="card-body">
    <h2 class="card-title">Edit User Information</h2>
    <%= form_tag user_path(@user), :method => :put, :class => 'form card-text' do %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <% @user.errors.full_messages.each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      <% end %>
      <div class="mb-3">
        <%= label :user, :name, 'Name', :class => 'form-label' %>
        <%= text_field :user, :name, :class => 'form-control' %>
      </div>
      <div class="mb-3">
        <%= label :user, :surname, 'Surname', :class => 'form-label' %>
        <%= text_field :user, :surname, :class => 'form-control' %>
      </div>
      <div class="mb-3">
        <%= label :user, :email, 'Email', :class => 'form-label' %>
        <%= text_field :user, :email, :class => 'form-control' %>
      </div>
      <div class="mb-3">
        <%= label :user, :password, 'Password', :class => 'form-label' %>
        <%= text_field :user, :password, :class => 'form-control' %>
      </div>
      <div class="mb-3">
        <%= label :user, :national_identification_number, 'National Identification Number', :class => 'form-label' %>
        <%= text_field :user, :national_identification_number, :class => 'form-control' %>
      </div>
      <div class="mb-3">
        <%= label :user, :phone_number, 'Phone Number', :class => 'form-label' %>
        <%= text_field :user, :phone_number, :class => 'form-control' %>
      </div>
      <div class="mb-3">
        <%= label :user, :date_of_birth, 'Date of Birth', :class => 'form-label' %>
        <%= date_select :user, :date_of_birth, :start_year => 1900, :end_year => 2030, :class => 'form-control' %>
      </div>

      <%= submit_tag 'Save Changes', :class => 'btn btn-primary' %>
    <% end %>
  </div>
</div>