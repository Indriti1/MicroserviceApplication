<div class="mw-100 w-75 p-4 m-5">
  <h2>Manage Vehicles</h2>
  <% if @vehicles.any? %>
    <table class="table table-striped mt-3">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Plate Number</th>
        <th scope="col">User</th>
        <th scope="col">Type</th>
        <th scope="col">Make</th>
        <th scope="col">Production Year</th>
        <th scope="col">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @vehicles.each_with_index do |vehicle, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= vehicle.plate_number %></td>
          <td><%= vehicle.user.name + " " + vehicle.user.surname %></td>
          <td><%= vehicle.vehicle_type %></td>
          <td><%= vehicle.make %></td>
          <td><%= vehicle.production_year %></td>
          <td>
            <div class="d-flex align-items-end">
              <%= button_to "View", vehicle_path(vehicle), method: :get, :class => 'btn btn-info text-white ms-2' %>
              <%= button_to "Edit", edit_vehicle_path(vehicle), method: :get, :class => 'btn btn-primary ms-2' %>
              <%= button_to "Delete", vehicle_path(vehicle), method: :delete, :class => 'btn btn-danger ms-2' %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
</div>