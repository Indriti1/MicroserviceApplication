<div class="mw-100 w-75 p-4 m-5">
  <h2>Notifications</h2>
  <% if @main_notifications.any? %>
      <% @main_notifications.each do |main_notification| %>
      <div class='card mt-4'>
        <div class="card-header d-flex justify-content-between">
          <h5 class="align-self-center"><%= main_notification.subject %></h5>
          <small class="align-self-center text-primary"><%= time_ago_in_words(main_notification.created_at) %> ago</small>
        </div>
        <div class="card-body">
          <p class="card-text"><%= main_notification.body %> ago</p>
        </div>
      </div>
      <% end %>
  <% end %>
</div>