<div class="mw-100 w-75 p-4 m-5">
  <h2>Notification</h2>
  <div class='card mt-4'>
    <div class="card-header d-flex justify-content-between">
      <h5 class="align-self-center"><%= @notification.subject %></h5>
      <small class="align-self-center text-primary"><%= time_ago_in_words(@notification.created_at) %> ago</small>
    </div>
      <div class="card-body">
        <p class="card-text"><%= @notification.body %></p>
      </div>
    </div>
</div>