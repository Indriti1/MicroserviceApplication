<div class="mw-100 w-75 p-4 m-5">
  <div class="d-flex align justify-content-between align-items-center">
    <h2>Manage Notifications</h2>
    <%= link_to 'Add Notification', new_notification_path, :class => 'card-link btn btn-success' %>
  </div>
  <table class="table table-striped mt-3">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col" class="w-50">Subject</th>
      <th scope="col" class="w-50">Created At</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>
    <% if @notifications.any? %>
      <tbody>
      <% @notifications.each_with_index do |notification, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= notification.subject %></td>
          <td><%= time_ago_in_words(notification.created_at) %> ago</td>
          <td>
            <div class="d-flex align-items-end">
              <%= button_to "View", notification_path(notification), method: :get, :class => 'btn btn-info text-white ms-2' %>
              <%= button_to "Edit", edit_notification_path(notification), method: :get, :class => 'btn btn-primary ms-2' %>
              <%= button_to "Delete", notification_path(notification), method: :delete, :class => 'btn btn-danger ms-2' %>
              <% if notification.published %>
                <h6 class="text-success ms-2">Published</h6>
              <% else %>
                <%= button_to "Publish", publish_notification_path(notification), method: :patch, :class => 'btn btn-success ms-2' %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    <% end %>
  </table>
</div>